<%- include("partials/header") %>

<div class="container-full">
    <div class="row">
        <div class="col-lg-12">
            <div class="jumbotron" style="background: url('/mechanic.jpg'); background-size: cover;">
                <h2 class="section_jumbo">Strona główna</h2>
            </div>
            
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            
            <h2 class="section_desc">Poznaj nas bliżej</h2>
            <p class="about text-justify">
               <%= admin.description %>
            </p>
            <% if(currentUser){ %>
                <a href="/users/<%= currentUser._id %>/edit" class="btn btn-danger btn-mine">Edytuj informacje</a>
                <a href="/users/<%= currentUser._id %>/new/picture" class="btn btn-secondary">Dodaj zdjęcie do galerii</a>
            <% } %>
            <% if(admin.pictures.length){ %>
                <h2 class="section_desc">Nasza galeria</h2>
                <div class="row">
                    <% for(let picture of admin.pictures){ %>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <img src="<%= picture.source %>" alt="Zdjęcie z naszej galerii" class="img-thumbnail" crossorigin>
                        </div>
                    <% } %>
                </div>
            <% } %>
            
            <h2 class="section_desc">Wybrane usługi</h2>
            <% if(!services.length){ %>
                <div class="alert alert-info">
                    Nie wybraliśmy jeszcze żadnych usług
                </div>
            <% } else { %>
                <div class="row">
                    <% for(let service of services){ %>
                        <div class="col-lg-6 col-sm-12 img__wrap service">
                            <img src="<%= service.profile %>" alt="<%= service.title %>" class="img-thumbnail" crossorigin>
                            <div class="img__description">
                                <a href="/services/<%= service.subpageLink %>">
                                    <%= service.title %>
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>
<script>
    document.getElementById("home").classList.add("active")
</script>
<%- include("partials/footer") %>
