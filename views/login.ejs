<%- include("partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 18%">
            <div id="form1">
                <a href="/" id="back">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do strony głównej
                </a>
                <h1 class="login">Logowanie do Czester Garage</h1>
                <% if(error.length > 0){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                <% } %>
                
                <form action="/login?return_route=<%= return_route %>" method="post" id="form">
                   
                    
                    <div class="form-floating mb-3">
                       
                        <input required type="text" class="form-control" autocomplete="off" placeholder="demcio09" name="username" id="username" aria-label="Hasło" aria-describedby="basic-addon1">
                        <label for="username" class="username">
                            Nazwa użytkownika
                            
                        </label>
                        
                    </div>
                  

                    <div class="form-floating mb-3">
                       <input required type="password" class="form-control" name="password" id="password" placeholder="1234" aria-label="Hasło" aria-describedby="basic-addon1">
                       <label for="password" class="username">
                        Hasło
                        
                        </label>
                    </div>
                    <input type="submit" value="Zaloguj się" class="btn button btn-danger btn-golden" id="send">
                   
                </form>
                <a href="/forgot" class="btn btn-secondary button">Zapomniałem hasło</a>
            </div>
            
        </div>
        
    </div>
</div>
<script>
    document.getElementById("form").addEventListener("submit", () => {
        document.getElementById("send").setAttribute("disabled", "disabled");
        document.getElementById("send").value = "Logowanie...";
    })
</script>
</body>
</html>